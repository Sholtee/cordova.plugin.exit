<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="solti.cordova.plugin.exit" version="0.0.1">
  <name>Exit</name>
  <description>Implements navigator.app.exit on Android</description>

  <js-module src="www/exit.js" name="exit">
    <merges target="navigator.app" />
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file target="config.xml" parent="/*">
      <feature name="Exit">
        <param name="android-package" value="org.solti.cordova.plugin.exit" />
      </feature>
    </config-file>
    <source-file src="src/android/Exit.java" target-dir="src/cordova/custom/plugins/exit" />
  </platform>
</plugin>
